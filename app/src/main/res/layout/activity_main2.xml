<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/casafondo"
    android:padding="0dp"
    android:orientation="vertical"
    tools:context=".Main2Activity"
    android:weightSum="1">


    <Button
        android:id="@+id/btnTv"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="361dp"
        android:background="@drawable/btn_tv_off"
        android:onClick="tv"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btnCerrojo"
        android:layout_width="97dp"
        android:layout_height="96dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="76dp"
        android:layout_marginTop="365dp"
        android:background="@drawable/btn_cerrojo_off"
        android:onClick="cerrojo"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <Button
        android:id="@+id/btnLuz"
        android:layout_width="93dp"
        android:layout_height="94dp"
        android:layout_marginRight="81dp"
        android:layout_marginTop="251dp"
        android:background="@drawable/btn_luz_off"
        android:onClick="luz"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="80dp" />

    <Button
        android:id="@+id/btnVentilador"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="253dp"
        android:background="@drawable/btn_ventilador_off"
        android:onClick="ventilador"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
